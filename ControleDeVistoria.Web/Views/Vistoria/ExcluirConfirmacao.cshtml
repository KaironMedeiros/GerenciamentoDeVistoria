@model ControleDeVistoria.Application.ViewModels.VistoriaViewModel

{
    ViewBag.Subtitulo = "Excluir vistoria";
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>
<h4>
    Deseja realmente excluir vistoria<span class="text-danger"> @Model.Imovel.Endereco.Rua </span>
</h4>

<div class="mt-3">
    <a class="btn btn-success" asp-controller="Vistoria" asp-action="Visualizar" asp-route-vistoriaId="@Model.Id">Não</a>
    <a class="btn btn-danger" asp-action="Excluir" asp-route-id="@Model.Id">Sim</a>
</div>